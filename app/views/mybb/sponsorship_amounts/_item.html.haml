- content_tag_for(:tr, resource, :class => cycle(:odd, :even)) do
  %td.image= image_tag(resource.child.album.cover_thumb(50), :alt => "Featured child")
  %td.data
    .child_name= h resource.child.try(:first_name)
    .about Description of the item
  %td.type Child Sponsorship
  %td.cost
    %p Your amount
    = select_tag "sponsorship_amounts[#{resource.id}][amount]", options_for_select(Sponsorship::AMOUNTS)
  //remove_edited
  %td.actions
    = link_to 'X remove', mybb_sponsorship_path(resource), :confirm => 'Are you sure you want to remove this sponsorship?', :method => :delete
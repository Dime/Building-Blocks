- content_tag_for(:tr, resource, :class => cycle(:odd, :even)) do
  %td.child_id= h resource.try(:child_id)
  %td.image= image_tag("_sample_child.jpg", :alt => "Featured child")

  %td.actions
    = link_to 'Show', resource_path(resource)

    = link_to 'Remove', mybb_sponsorship_path(resource), :confirm => 'Are you sure?', :method => :delete
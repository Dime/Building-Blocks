- content_tag_for(:tr, resource, :class => "first #{cycle(:odd, :even)}") do
  %td.image.large= image_tag("_sample_child.jpg", :alt => "Featured child")
  %td.child_name= h resource.child.try(:first_name)
  %td.type Child Sponsorship
  %td.cost
    %input{:type=>"radio"}
    %label €30 monthly
    %br
    %input{:type=>"radio"}
    %label €90 quarterly
    %br
    %input{:type=>"radio"}
    %label €180 half-yearly
    %br
    %input{:type=>"radio"}
    %label €360 yearly

  %td.actions
    = link_to 'Remove', mybb_sponsorship_path(resource), :confirm => 'Are you sure?', :method => :delete
#step1
  = render :partial => 'shared/steps'
  #main
    = image_tag @child.album.cover_thumb(228), :alt => "Child"
    .text
      %h1= "Sponsor #{@child.first_name}"
      %dl
        %dt Age:
        %dd= age(@child.birthday)
        %dt Gender:
        %dd= boy_girl?(@child.gender)
        %dt Likes:
        %dd= @child.likes
      %p= "You will be able to view #{his_her?(@child.gender)} photos and full profile when you complete the sponsorship process."
      - semantic_form_for(Sponsorship.new(:child => @child, :amount => 360), :url => mybb_sponsorships_path) do |form|
        = form.hidden_field :child_id
        = form.hidden_field :amount
        - form.buttons do
          = form.commit_button 'Sponsor Now'


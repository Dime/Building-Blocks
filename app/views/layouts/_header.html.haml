#header
  .wrapper

    #logo
      = link_to image_tag("logo.png", :alt => "Building Blocks logo"), root_path
    #user_nav
      %ul
        %li log in

    #main_nav
      %ul
        %li#child
          - if @random_child
            = link_to "sponsor a child", child_path(@random_child)
          - else
            = link_to "sponsor a child", root_path
        %li#work
          = link_to "support our work"
        %li#schools
          = link_to "our schools"
        %li#about
          = link_to "about us", static_page_path('about')
